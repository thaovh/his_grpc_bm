# ============================================
# Users Service Environment Variables
# ============================================

# Service Configuration
# ---------------------
# URL để bind gRPC service
# Trong Docker: dùng "0.0.0.0" để lắng nghe trên tất cả interfaces
# Local development: có thể dùng "0.0.0.0" hoặc "localhost"
URL=0.0.0.0

# Port để gRPC service lắng nghe (default: 50051)
PORT=50051

# Environment: development, test, production (default: development)
NODE_ENV=development

# Database Configuration
# ----------------------
# Database Host
# IP address hoặc hostname của Oracle database server
DB_HOST=192.168.7.248

# Database Port (Oracle default: 1521)
DB_PORT=1521

# Database Username
DB_USER=HXT_RS

# Database Password
DB_PASSWORD=HXT_RS

# Database Name / Service Name
# Tên database hoặc service name
DB_NAME=orclstb

# Oracle SID (System Identifier)
# Chỉ dùng khi kết nối qua SID thay vì Service Name
# Để trống nếu dùng Service Name
DB_SID=

# Oracle Service Name (recommended)
# Service name của Oracle database
DB_SERVICE_NAME=orclstb

# Full Connection String (Optional)
# Format: host:port/service_name
# Nếu có connectString, có thể bỏ qua các biến trên
DB_CONNECT_STRING=192.168.7.248:1521/orclstb

# Schema Synchronization
# ----------------------
# Tự động tạo/update database schema khi khởi động
# true = tự động sync (chỉ dùng trong development)
# false = dùng migrations (bắt buộc trong production)
# Default: true nếu NODE_ENV !== 'production'
DB_SYNCHRONIZE=true

# Logging Configuration (Optional)
# --------------------------------
# Pino logger level: trace, debug, info, warn, error, fatal
# LOG_LEVEL=info

# Connection Pool Configuration (Optional)
# ----------------------------------------
# Các cấu hình này được set trong code, nhưng có thể override nếu cần
# Pool min connections (default: 2)
# DB_POOL_MIN=2

# Pool max connections (default: 10)
# DB_POOL_MAX=10

# Queue timeout in milliseconds (default: 120000 = 2 minutes)
# DB_QUEUE_TIMEOUT=120000

# Retry Configuration (Optional)
# -------------------------------
# Retry attempts khi kết nối database fail (default: 3)
# DB_RETRY_ATTEMPTS=3

# Retry delay in milliseconds (default: 3000 = 3 seconds)
# DB_RETRY_DELAY=3000

